<div class = "row">
  <div class = "span5">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>

    <fieldset>
      <legend>Edit Account</legend>
      <%= f.input :email %>
      <%= f.input :password, :hint => 'leave blank if you do not want to change it' %>
      <%= f.input :password_confirmation %>
      <%= f.input :current_password, :hint => 'We need you current password to confirm your changes' %>
      <%= f.button :submit, "Update" %>

    </fieldset>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

    <%= link_to "Back", :back %>
  </div>
  <div class="span7">
  </div>
</div>